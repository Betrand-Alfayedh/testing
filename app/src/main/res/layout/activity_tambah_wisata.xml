<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TambahWisataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Tambah Wisata"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/orange2"
                android:visibility="gone"
                android:id="@+id/progressBar"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Wisata"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/etNamaWisata"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text"
                android:drawableStart="@drawable/ic_judul"
                android:drawablePadding="5dp"
                android:drawableTint="@color/orange2"
                android:hint="Judul"
                android:paddingStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Telepon"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/etNoTlp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="5dp"
                android:drawableTint="@color/orange2"
                android:hint="089393847"
                android:paddingStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text"
                android:drawableStart="@drawable/ic_alamat"
                android:drawablePadding="5dp"
                android:drawableTint="@color/orange2"
                android:hint="Alamat"
                android:paddingStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Wisata"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/etDeskripsi"
                android:hint="Konten Berita"
                android:gravity="start"
                android:background="@drawable/bg_edit_text"
                android:inputType="textMultiLine"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gambar"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnGambar"
                android:text="Pilih Gambar"
                />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imgGambar"
                android:src="@drawable/bg_images_item"
                android:layout_gravity="center"
                android:background="@color/black"
                android:visibility="gone"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah"
                android:id="@+id/btnTambah"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/orange2"
                />


        </LinearLayout>

    </LinearLayout>

</ScrollView>